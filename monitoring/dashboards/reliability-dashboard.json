{
  "displayName": "Task3 - Reliability Overview",
  "mosaicLayout": {
    "columns": 48,
    "tiles": [
      {
        "xPos": 0,
        "yPos": 0,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Container Restarts (Staging/Production)",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/container/restart_count\" resource.type=\"k8s_container\" resource.label.cluster_name=\"online-boutique\" resource.label.namespace_name=one_of(\"staging\",\"production\")",
                    "aggregation": {
                      "alignmentPeriod": "300s",
                      "perSeriesAligner": "ALIGN_DELTA",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": [
                        "resource.label.namespace_name"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "restarts",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "xPos": 24,
        "yPos": 0,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Deployment Replicas: Desired vs Available",
          "xyChart": {
            "dataSets": [
              {
                "legendTemplate": "desired {{metric.label.deployment}} ({{resource.label.namespace}})",
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"prometheus.googleapis.com/kube_deployment_spec_replicas/gauge\" resource.type=\"prometheus_target\" resource.label.cluster=\"online-boutique\" resource.label.namespace=one_of(\"staging\",\"production\") metric.label.deployment=one_of(\"frontend\", \"paymentservice\")",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN",
                      "groupByFields": [
                        "resource.label.namespace",
                        "metric.label.deployment"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              },
              {
                "legendTemplate": "available {{metric.label.deployment}} ({{resource.label.namespace}})",
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"prometheus.googleapis.com/kube_deployment_status_replicas_available/gauge\" resource.type=\"prometheus_target\" resource.label.cluster=\"online-boutique\" resource.label.namespace=one_of(\"staging\",\"production\") metric.label.deployment=one_of(\"frontend\", \"paymentservice\")",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN",
                      "groupByFields": [
                        "resource.label.namespace",
                        "metric.label.deployment"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "replicas",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "xPos": 0,
        "yPos": 16,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Unschedulable Pods",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"prometheus.googleapis.com/kube_pod_status_unschedulable/gauge\" resource.type=\"prometheus_target\" resource.label.cluster=\"online-boutique\" resource.label.namespace=one_of(\"staging\",\"production\")",
                    "aggregation": {
                      "alignmentPeriod": "60s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_SUM",
                      "groupByFields": [
                        "resource.label.namespace"
                      ]
                    }
                  }
                },
                "plotType": "STACKED_AREA",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "pods",
              "scale": "LINEAR"
            }
          }
        }
      },
      {
        "xPos": 24,
        "yPos": 16,
        "width": 24,
        "height": 16,
        "widget": {
          "title": "Pod First-Ready Latency (avg)",
          "xyChart": {
            "dataSets": [
              {
                "timeSeriesQuery": {
                  "timeSeriesFilter": {
                    "filter": "metric.type=\"kubernetes.io/pod/latencies/pod_first_ready\" resource.type=\"k8s_pod\" resource.label.cluster_name=\"online-boutique\" resource.label.namespace_name=one_of(\"staging\",\"production\")",
                    "aggregation": {
                      "alignmentPeriod": "300s",
                      "perSeriesAligner": "ALIGN_MEAN",
                      "crossSeriesReducer": "REDUCE_MEAN",
                      "groupByFields": [
                        "resource.label.namespace_name"
                      ]
                    }
                  }
                },
                "plotType": "LINE",
                "targetAxis": "Y1"
              }
            ],
            "yAxis": {
              "label": "seconds",
              "scale": "LINEAR"
            }
          }
        }
      }
    ]
  }
}
